<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/started_service"
            android:layout_width="407dp"
            android:layout_height="43dp"
            android:text="Stared Service"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="22dp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/noti_service_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification start"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="75dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/noti_service_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification stop"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="75dp"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bound_service_start"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="Bound Service start"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="129dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/bound_service_stop"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="Bound Service start"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="129dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <TextView
            android:id="@+id/timestamp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/print_timestamp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>